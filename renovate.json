{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["integrated-docs.sh"],
      "matchStrings": [
        "^(\\s*\"git@github.com:(?<depName>[^/]+/[^'\\s]+)\\s+(?<tag>[^'\\s]+)\\s+(?<targetDir>[^'\\s]+)\".*)$"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "semver",
      "groupMatch": true
    }
  ]
  
}
