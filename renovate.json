{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^integrated-docs\\.js$"],
      "matchStrings": [
        "url: '(?<repository>[^']+\\.git)',\\s+branch: '(?<currentValue>[^']+)'"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{repository}}",
      "versioningTemplate": "semver"
    }
  ]
}
