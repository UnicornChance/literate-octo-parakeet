{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["integrated-docs.sh"],
      "matchStrings": [
        "\\s*\"(git@github.com:[^\"]+)\\s+([^\\s]+)\\s+[^\"]+\""
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{group1}}",
      "versioningTemplate": "semver"
    }
  ]  
}
