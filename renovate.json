{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^package.json$"],
      "matchStrings": [
        "git clone --branch (?<currentValue>[\\w.-]+) --single-branch git@github\\.com:(?<depName>[\\w-]+/[\\w-]+)\\.git"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{{depName}}}",
      "versioningTemplate": "semver"
    }
  ]
}
