{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":disableDependencyDashboard",
      "group:allNonMajor"
    ],
    "ignorePaths": [
      "go.sum"
    ],
    "packageRules": [
      {
        "matchDepTypes": [
          "devDependencies"
        ],
        "automerge": true
      },
      {
        "matchManagers": ["gomod"],
        "matchDepTypes": ["direct"],
        "enabled": true
      }
    ]
  }
  