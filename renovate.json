{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["integrated-docs.sh"],
      "matchStrings": [
        "\"(https://github.com/(?<depName>[^/]+/[^\\s]+)\\s+(?<currentValue>[^\\s]+)\\s+[^\\s]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "semver"
    }
  ]
}
